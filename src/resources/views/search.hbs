<div class="mt-4">
    <form method="POST">

        <div class="mb-3">
            <label for="search-input" class="form-label">Keyword</label>
            <input type="text" name="q" class="form-control"  id="search-input" placeholder="Enter what you are searching here">
        </div>

         <div class="mb-3">
            <label for="gender-input" class="form-label">Gender</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">Choose your Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>